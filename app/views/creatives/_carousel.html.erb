<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="8000" data-pause="none">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">



    <div class="item active">
      <%= image_tag "creative/carousel-images/pic1-1920x1050.jpg" %>
      <div class="carousel-content-1">
        <p>SCRIVI.  CONDIVIDI.  COLLABORA.</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag "creative/carousel-images/pic2-1920x1050.jpg" %>
      <div class="carousel-content-2">
        <p>UN NUOVO CONCETTO DI LAVAGNA</p>
      </div>
    </div>


    <div class="item">
      <%= image_tag "creative/carousel-images/pic3-1920x1050.jpg" %>
      <div class="carousel-content-3">
        <p>INVITA CHI VUOI ALLA SESSIONE</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag "creative/carousel-images/pic4-1920x1050.jpg" %>
      <div class="carousel-content-4">
        <p>PARTECIPA ANCHE DA REMOTO ...</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag "creative/carousel-images/pic5-1920x1050.jpg" %>
      <div class="carousel-content-5">
        <p>... CON QUALSIASI DEVICE</p>
      </div>
    </div>

  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
